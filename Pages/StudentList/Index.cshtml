@page
@model StudentRazorPage.Pages.StudentList.IndexModel
@{

}

<br />
<h2> Student List</h2>
<br />

<a asp-page="Create" class="btn btn-primary">Create new Student</a>


<form method="post">
    @if (Model.students.Count() > 0)
    {
        <br /><br />
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.students.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.students.FirstOrDefault().Class)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.students.FirstOrDefault().address)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.students.FirstOrDefault().PhoneNumber)
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model.students)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Class)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.address)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.PhoneNumber)
                    </td>
                    <td>
                        <button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                    </td>
                </tr>

            }
        </table>
        <br /><br />

    }
    else
    {
        <div>No student in Database.</div>
    }
</form>